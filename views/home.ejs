<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %> 

<body>
    <%- include("./partials/nav.ejs") %> 
    

    <div class="blogs content">
        <h2>All Blogs</h2>

        
        <% if( blogs.length > 0) {
            for(blog of blogs) { %>
                
                <div>
                    <a href="/blogs/<%= blog.id %>">
                        <h3> <%= blog.title %></h3>
                        <p><%= blog.snippet %></p>
                    </a>
                </div>

            <% } 
            
        } else { %>
            <p>There are no blogs ....</p>
        <% } %>
      
      
    </div>

    <%- include("./partials/footer.ejs") %> 
</body>
</html>